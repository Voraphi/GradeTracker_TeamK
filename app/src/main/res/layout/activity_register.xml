<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFEBFF"
    tools:context=".Register">

    <TextView
        android:id="@+id/register_header"
        android:layout_width="217dp"
        android:layout_height="125dp"
        android:layout_marginTop="100dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/register_button"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_input1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/login_input1"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/register_last_name"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/register_last_name"
        app:layout_constraintTop_toBottomOf="@+id/register_last_name" />

    <EditText
        android:id="@+id/register_input2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/login_input2"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/register_input1"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/register_input1"
        app:layout_constraintTop_toBottomOf="@+id/register_input1" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginBottom="120dp"
        android:background="#B6FFAA"
        android:shadowColor="#FFFFFF"
        android:text="@string/register_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/register_input2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/register_input2"
        app:layout_constraintTop_toBottomOf="@+id/register_input2"
        app:layout_constraintVertical_bias="0.262" />

    <EditText
        android:id="@+id/register_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/first"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/register_header"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/register_header"
        app:layout_constraintTop_toBottomOf="@+id/register_header" />

    <EditText
        android:id="@+id/register_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/last"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/register_first_name"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/register_first_name"
        app:layout_constraintTop_toBottomOf="@+id/register_first_name" />
</androidx.constraintlayout.widget.ConstraintLayout>