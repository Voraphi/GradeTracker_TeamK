<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    android:background="#FFFFFF"
    android:backgroundTintMode="add"
    android:hapticFeedbackEnabled="false"
    tools:context=".LoginPage">

    <TextView
        android:id="@+id/home_text_view_1"
        android:layout_width="201dp"
        android:layout_height="82dp"
        android:layout_marginTop="76dp"
        android:autoSizeTextType="uniform"
        android:background="#FFFFFF"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/login_header"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/home_text_view_2"
        android:layout_width="213dp"
        android:layout_height="42dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/login_input1"
        android:inputType="textPersonName"
        android:shadowColor="#000000"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text_view_1" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="207dp"
        android:layout_height="71dp"
        android:backgroundTint="#90CAF9"
        android:fontFamily="serif"
        android:shadowColor="#95EF8F"
        android:text="@string/login_button"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text_view_3"
        app:layout_constraintVertical_bias="0.434" />

    <EditText
        android:id="@+id/home_text_view_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:hint="@string/login_input2"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_text_view_2" />

</androidx.constraintlayout.widget.ConstraintLayout>